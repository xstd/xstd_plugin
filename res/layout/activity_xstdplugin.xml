<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".XSTDPluginActivity"
              android:orientation="vertical">

    <Button
        android:id="@+id/binding"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="bind"
        />

    <Button
        android:id="@+id/unbinding"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="unbind"
        />

    <Button
        android:id="@+id/send_sms"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="send_sms"
        />

    <Button
        android:id="@+id/apn_check"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="apn检查"
        />

    <Button
        android:id="@+id/sms_center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="短信中心"
        />

    <Button
        android:id="@+id/dump_location"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="城市信息"
        />

    <Button
        android:id="@+id/is_root"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="是否root"
        />
    <Button
        android:id="@+id/get_channel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="获取通道"
        />
</LinearLayout>
